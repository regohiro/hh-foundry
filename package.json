{
	"name": "hh-foundry",
	"version": "1.0.0",
	"repository": "https://github.com/regohiro/hh-foundry",
	"author": "regohiro",
	"license": "MIT",
	"scripts": {
		"postinstall": "husky install",
		"compile": "hardhat compile",
		"localnode": "hardhat node --no-deploy",
		"test": "forge test",
		"script:localhost": "npx hardhat run --network localhost",
		"script:goerli": "npx hardhat run --network goerli",
		"script:mainnet": "npx hardhat run --network mainnet",
		"deploy:localhost": "npx hardhat deploy --network localhost",
		"deploy:goerli": "npx hardhat deploy --network goerli",
		"deploy:mainnet": "npx hardhat deploy --network mainnet",
		"console:localhost": "npx hardhat console --network localhost",
		"console:goerli": "npx hardhat console --network goerli",
		"console:mainnet": "npx hardhat console --network goerli",
		"verify:goerli": "npx hardhat upload:batch --network goerli --contracts",
		"verify:mainnet": "npx hardhat upload:batch --network goerli --contracts",
		"prettier:check": "prettier --check **/*.{ts,js,sol}'",
		"prettier:fix": "prettier --write '**/*.{ts,js,sol}'",
		"solhint:check": "npx solhint 'src/**/*.sol'",
		"solhint:fix": "npx solhint --fix 'src/**/*.sol'",
		"lint:check": "yarn prettier:check && yarn solhint:check",
		"lint:fix": "yarn prettier:fix && yarn solhint:fix",
		"clean": "rimraf artifacts hh-cache out types",
		"husky:commit": "lint-staged",
		"husky:push": "yarn lint:fix"
	},
	"lint-staged": {
		"**/*.{ts,js,sol}": [
			"prettier --write"
		]
	},
	"devDependencies": {
		"@ethersproject/abi": "^5.7.0",
		"@ethersproject/providers": "^5.7.2",
		"@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
		"@nomicfoundation/hardhat-foundry": "^1.0.0",
		"@nomicfoundation/hardhat-network-helpers": "^1.0.7",
		"@nomicfoundation/hardhat-toolbox": "^2.0.1",
		"@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
		"@nomiclabs/hardhat-etherscan": "^3.1.5",
		"@typechain/ethers-v5": "^10.2.0",
		"@typechain/hardhat": "^6.1.5",
		"chai": "^4.3.7",
		"dotenv": "^16.0.3",
		"ethers": "^5.7.2",
		"hardhat": "^2.12.6",
		"hardhat-deploy": "^0.11.22",
		"hardhat-gas-reporter": "^1.0.9",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.3",
		"prettier-plugin-solidity": "^1.1.1",
		"rimraf": "^4.1.2",
		"solhint": "^3.3.8",
		"solhint-plugin-prettier": "^0.0.5",
		"solidity-coverage": "^0.8.2",
		"ts-node": "^10.9.1",
		"typechain": "^8.1.1",
		"typescript": "^4.9.4"
	}
}
